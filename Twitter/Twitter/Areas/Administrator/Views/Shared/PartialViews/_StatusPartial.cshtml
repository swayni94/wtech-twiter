@model Status

@switch (Model)
{
    case Status.None:
        <span class="badge badge-primary">İşlem Yapılmadı</span>
        break;
    case Status.Active:
        <span class="badge badge-secondary">Aktif</span>
        break;
    case Status.Deleted:
        <span class="badge badge-danger">Kaldırıldı</span>
        break;
    case Status.Updated:
        <span class="badge badge-info">Güncellendi</span>
        break;
    case Status.Banned:
        <span class="badge badge-danger">Banlandı</span>
        break;
    default:
        break;
}
