<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Twitter</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" type="image/x-icon" href="~/admin/assets/images/favicon.ico">
    <link rel="stylesheet" href="~/admin/assets/css/vendor/bootstrap.min.css">
    <link rel="stylesheet" href="~/admin/assets/css/vendor/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/admin/assets/css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="~/admin/assets/css/vendor/themify-icons.css">
    <link rel="stylesheet" href="~/admin/assets/css/vendor/cryptocurrency-icons.css">
    <link rel="stylesheet" href="~/admin/assets/css/plugins/plugins.css">
    <link rel="stylesheet" href="~/admin/assets/css/helper.css">
    <link rel="stylesheet" href="~/admin/assets/css/style.css">
    <link id="cus-style" rel="stylesheet" href="~/admin/assets/css/style-primary.css">
</head>
<body>

    <div class="main-wrapper">
        <div class="content-body m-0 p-0">
            <div class="row m-0 bg-dark d-flex justify-content-center">
                <div class="container-fluid d-flex justify-content-center" style="background-color:black; height: 100%; min-height: 100vh;">
                    <div class="col-2 border-right border-dark">
                        <img class="img-fluid col-4 mt-2 ml-20" src="../../../twitter_logo.png" />
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item" style="background-color:black;">
                                <a class="text-light mt-2" style="font-size:1.6rem;" asp-controller="Layout" asp-action="Main"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
                            </li>
                            <li class="list-group-item" style="background-color:black;">
                                <a class="text-light mt-2" style="font-size:1.6rem;"><i class="fa fa-hashtag" aria-hidden="true"></i> Explore</a>
                            </li>
                            <li class="list-group-item" style="background-color:black;">
                                <a class="text-light mt-2" style="font-size:1.6rem;"><i class="fa fa-bell-o" aria-hidden="true"></i> Notifications</a>
                            </li>
                            <li class="list-group-item" style="background-color:black;">
                                <a class="text-light mt-2" style="font-size:1.6rem;"><i class="fa fa-envelope-square" aria-hidden="true"></i> Messages</a>
                            </li>
                            <li class="list-group-item" style="background-color:black;">
                                <a class="text-light mt-2" style="font-size:1.6rem;"><i class="fa fa-bookmark-o" aria-hidden="true"></i> Bookmarks</a>
                            </li>
                            <li class="list-group-item" style="background-color:black;">
                                <a class="text-light mt-2" style="font-size:1.6rem;"><i class="fa fa-list-alt" aria-hidden="true"></i> Lists</a>
                            </li>
                            <li class="list-group-item" style="background-color:black;">
                                <a class="text-light mt-2" style="font-size:1.6rem;" asp-controller="Layout" asp-action="Profile"><i class="fa fa-user" aria-hidden="true"></i>Profil</a>
                            </li>
                            <li class="list-group-item" style="background-color:black;">
                                <a class="text-light mt-2" style="font-size:1.6rem;"><i class="fa fa-btc" aria-hidden="true"></i>More</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-5">
                        <div class="container">
                            <main role="main" class="pb-3">
                                @RenderBody()
                            </main>
                        </div>
                    </div>
                    <div class="col-2 border-left border-dark">
                        <div class="border border-dark pl-10 pt-5 pb-5 mt-2" style="border-radius:50px;">
                            <span>
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </span>
                            <input class="text-light" type="search" style="outline:none; border:none; background-color:transparent;" placeholder="Search" aria-label="Search">
                        </div>

                        <div class="box col-12 border border-dark bg-dark mt-5 pt-5 pb-5" style="border-radius:10px;">
                            <div class="col-12 p-0" style="background-color:transparent">
                                <h4 class="text-light">Kimi takip etmeli</h4>
                            </div>

                            @*@foreach(var item in Model)
                                {
                                    <div class="d-flex justify-content-between">
                                        <img src="@item.ImagePath" />
                                        <div>
                                            <h4>@item.FirstName @item.LastName</h4>
                                            <p>@item.EmailAddress</p>
                                        </div>
                                        <a class="col-6 btn btn-outline-primary btn-lg btn-block text-primary rounded-50">Takip et</a>
                                    </div>
                                }*@
                            <div class="col-12 p-0" style="background-color:transparent">
                                <a class="text-primary">Daha fazla göster</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*<header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Twitter</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
